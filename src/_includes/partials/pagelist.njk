{% if pagelist %}

<div id="article">
  {%- for post in pagelist -%}

    <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>

    {% if post.data.date %}<p class="time"><time datetime="{{ post.data.date | dateymd }}">{{ post.data.date | datefriendly }}</time></p>{% endif %}

    <p>{{ post.data.description }}</p>
    <p> Topics: {{post.data.tags}}

  {%- endfor -%}

{% endif %}

{% if pagination.href.previous or pagination.href.next %}

  {% if pagination.href.previous %}
    <p><a href="{{ pagination.href.previous }}">Previous Page</a></p>
  {% endif %}

  {% if pagination.href.next %}
    <p><a href="{{ pagination.href.next }}">Next Page</a></p>
  {% endif %}

{% endif %}

</div>